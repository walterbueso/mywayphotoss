@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "Master.cshtml";
}
<section id="hero" class="module-hero bg-dark-60" data-background="@Url.GetCropUrl(Model.Content, "heroImg", "main")">

    <!-- HERO TEXT -->
    <div class="hero-caption">
        <div class="hero-text">
            <h1 class="hero-title font-alt">@Umbraco.Field("title")</h1>
            @if (CurrentPage.HasProperty("subtitle") && CurrentPage.HasValue("subtitle"))
            {
                <p class="hero-subtitle font-serif">@Umbraco.Field("subtitle")</p>
            }
        </div>
    </div>
    <!-- /HERO TEXT -->
</section>
<section class="module">
    <div class="container-fluid container-custom">
        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">

                <!-- CONTENT -->
                <article class="portfolio-post post">
                    @Umbraco.Field("bodyText")
                </article>
                <!-- / CONTENT -->
            </div><!-- .col-* -->
        </div>



    </div>
</section>
